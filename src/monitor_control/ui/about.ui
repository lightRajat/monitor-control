<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />

  <object class="GtkWindow" id="about_window">
    <property name="title">About</property>
    <property name="modal">true</property>
    <property name="resizable">false</property>
    <property name="default-width">420</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">20</property>
        <property name="margin-top">24</property>
        <property name="margin-bottom">24</property>
        <property name="margin-start">24</property>
        <property name="margin-end">24</property>

        <!-- App title -->
        <child>
          <object class="GtkLabel">
            <property name="label">Monitor Control</property>
            <property name="css-classes">title-1</property>
            <property name="halign">center</property>
          </object>
        </child>

        <!-- Description -->
        <child>
          <object class="GtkLabel">
            <property name="label">Control brightness, contrast, and volume of external monitors using DDC/CI.</property>
            <property name="wrap">true</property>
            <property name="halign">center</property>
            <property name="justify">center</property>
          </object>
        </child>

        <!-- Author -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">4</property>
            <property name="halign">center</property>

            <child>
              <object class="GtkLabel">
                <property name="use-markup">true</property>
                <property name="label">&lt;b&gt;Author:&lt;/b&gt; Rajat</property>
              </object>
            </child>

            <child>
              <object class="GtkLabel">
                <property name="use-markup">true</property>
                <property name="label">&lt;b&gt;Email:&lt;/b&gt; light.rajat+contact@gmail.com</property>
              </object>
            </child>

          </object>
        </child>

        <!-- GitHub link -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">0</property>
            <property name="halign">center</property>

            <child>
              <object class="GtkLabel">
                <property name="label">Contribute or report bugs on</property>
              </object>
            </child>

            <child>
              <object class="GtkLinkButton">
                <property name="label">GitHub</property>
                <property name="uri">https://github.com/lightRajat/monitor-control</property>
              </object>
            </child>

          </object>
        </child>

        <!-- Close button -->
        <child>
          <object class="GtkButton" id="close_button">
            <property name="label">Close</property>
            <property name="halign">center</property>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>